    <script>
      $(function(){
        $('input[type=text][placeholder], input[type=password][placeholder], textarea[placeholder]').placeholder();
      })
    </script>
    <![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body>
  <header class="mall_header">
    <%= render '/shared/website/hander' %>
