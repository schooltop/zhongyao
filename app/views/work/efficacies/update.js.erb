<% if @efficacy.errors.blank? %>
  $("#efficacy_<%= @efficacy.id %>").replaceWith('<%= j render('list', efficacy: @efficacy) %>');
  $("#edit_efficacy_modal").modal('hide');
<% else %>
  $(".field .red.pointing").remove();
  <% @efficacy.errors.messages.each do |key, value| %>
  $("#efficacy_<%= key %>").parent().addClass('error');
  $("#efficacy_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
<% end %>
<% end %>
$(".button").popup();
$(".icon").popup();