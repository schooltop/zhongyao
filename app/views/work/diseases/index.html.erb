<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h2>病例管理</h2>
  </div>
</div>
<%= render 'search_form'  %>
<div class="ui blue segment">
  <div class="ui grid">
    <div class="left floated wide column">
      <%= link_to new_work_disease_path, remote: true, class: 'ui primary button' do %>
        <i class="plus icon"></i>新增病例
      <% end %>
    </div>
  </div>
  <table class="ui selectable striped celled table">
    <thead>
    <tr >
      <th class="center aligned">ID</th>
      <th class="center aligned">病例名称</th>
      <th class="center aligned">连接</th>
      <th class="center aligned">描述</th>
      <th class="center aligned">操作</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'list', collection: @diseases, as: :disease %>
    </tbody>
  </table>
  <span class="blue">
    <%= page_entries_info(@diseases) %>
  </span>
  <%= paginate(@diseases, :theme => 'admin')%>
</div>
