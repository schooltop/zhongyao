<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h2>别名管理</h2>
  </div>
</div>
<%= render 'search_form'  %>
<div class="ui blue segment">
  <div class="ui grid">
    <div class="left floated wide column">
      <%= link_to new_work_alias_name_path, remote: true, class: 'ui primary button' do %>
        <i class="plus icon"></i>新增别名
      <% end %>
    </div>
  </div>
  <table class="ui selectable striped celled table">
    <thead>
    <tr >
      <th class="center aligned">ID</th>
      <th class="center aligned">常用名</th>
      <th class="center aligned">别名</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'list', collection: @alias_names, as: :user %>
    </tbody>
  </table>
  <span class="blue">
    <%= page_entries_info(@alias_names) %>
  </span>
  <%= paginate(@alias_names, :theme => 'admin')%>
</div>
